#ifndef INCLUDE_HYPERTRACER_PANIC
#define INCLUDE_HYPERTRACER_PANIC

#include <cstdio>
#include <exception>
#include <string_view>

namespace ht {
namespace internal {

[[noreturn]] static inline void panic(std::string_view message) noexcept {
    std::fwrite(message.data(), 1, message.size(), stderr);
    std::terminate();
}

static inline void warning(std::string_view message) noexcept {
    std::fwrite(message.data(), 1, message.size(), stderr);
}

} // namespace internal
} // namespace ht

#endif
